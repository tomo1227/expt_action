{
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.guides.bracketPairs": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": "explicit"
  },
  "editor.rulers": [120],
  "[go]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go",
    "editor.autoIndent": "advanced",
    "editor.codeActionsOnSave": {
      // gciを使う場合はneverにしなければならない
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "go.useLanguageServer": true,
  "gopls": {
    "analyses": {
      "shadow": true
    },
    "ui.semanticTokens": true,
    "ui.completion.usePlaceholders": true,
    "hoverKind": "SynopsisDocumentation",
    "linkTarget": "pkg.go.dev",
    "completionDocumentation": true,
    "completeUnimported": true,
    "deepCompletion": true,
    "staticcheck": false
  },
  "go.languageServerFlags": ["-rpc.trace", "serve", "--debug=localhost:6060"],
  "go.trace.server": "verbose",
  "go.formatTool": "gofmt",
  "go.lintOnSave": "workspace",
  "go.lintTool": "golangci-lint",
  "go.toolsManagement.autoUpdate": true,
  "go.lintFlags": ["--config=${workspaceFolder}/.golangci.toml", "--fast"],
  "go.addTags": {
    "tags": "json,validate",
    "options": "json=omitempty,validate=omitempty",
    "promptForTags": false,
    "transform": "snakecase",
    "template": ""
  },
  "go.coverOnSave": true,
  "go.coverageDecorator": {
    "type": "gutter",
    "coveredGutterStyle": "blockgreen",
    "uncoveredGutterStyle": "blockred"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnPaste": true,
    "editor.formatOnType": true
  },
  "markdownlint.run": "onSave",
  "markdownlint.config": {
    "MD010": false,
    "MD025": false,
    "MD033": false,
    "MD034": false
  },
  "markdown.extension.print.theme": "dark",
  "markdown.copyFiles.destination": {
    "**/*": "../media/img/img.${fileExtName}"
  },
  "markdown-preview-enhanced.codeBlockTheme": "solarized-light.css",
  "markdown.extension.toc.unorderedList.marker": "*",
  "markdown.extension.orderedList.marker": "one",
  "[jsonc][json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.autoIndent": "advanced",
    "files.insertFinalNewline": true
  },
  "json.schemaDownload.enable": true,
  "[yaml][dockercompose][github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "files.insertFinalNewline": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  "yaml.format.enable": true,
  "cSpell.words": [
    "Codecov",
    "devcontainer",
    "devcontainers",
    "dockercompose",
    "Godoc",
    "gofiber",
    "gofmt",
    "gomod"
  ],
  "cSpell.ignorePaths": [
    ".vscode",
    ".devcontainer/devcontainer.json",
    ".golangci.toml"
  ],
  "errorLens.excludeBySource": [
    "cSpell"
  ]
}
